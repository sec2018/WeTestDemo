/* pages/mulit_order/mulit_order.wxss */
.order-header {
  display: flex;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f6f6f6;
  align-items: center;
}

.order-cicle {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  border-radius: 100%;
  background: #000;
  color: #fff;
  text-align: center;
}
.order-h-con {
  width: 460rpx;
  margin: 0 20rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  height: 102rpx;
  line-height: 34rpx;
  overflow: hidden;
  border-right: 1rpx solid #f6f6f6;
}

.order-h-conb {
  font-size: 24rpx;
  height:68rpx;
  color: #666;
}

.order-h-btn {
  width: 100rpx;
  font-size: 28rpx;
  text-align: center;
}
.list-li{
  display: flex;
  padding:10rpx 30rpx;
  border-bottom:1px solid #ececec;
}
.list-li-con{
  width:600rpx;
}
.list-li-btn{
  width:90rpx;
  font-size: 28rpx;
  text-align: center;
}
.order-add-btn{
  width:600rpx;
  padding:10rpx 0;
  margin:20rpx auto;
  border:1px solid #ccc;
  background: #f1f1f1;
  text-align: center;
}
.order-create-btn{
  position: fixed;
  left:0;
  right:0;
  bottom:0;
  background: #c1975b;
  padding:20rpx 0;
  font-size: 28rpx;
  color:#fff;
  text-align: center;
}
.order-dialog-bg{
  position: fixed;
  top:0;
  left:0;
  right:0;
  bottom:0;
  background: rgba(0,0,0,0.5);
}
.order-dialog{
  position: fixed;
  top:50rpx;
  bottom:50rpx;
  left:30rpx;
  right:30rpx;
  background: #fff;
  border-radius: 8rpx;
}
.order-dialog-close{
  padding:20rpx 40rpx;
  text-align: right;
  background: #f1f1f1;
}