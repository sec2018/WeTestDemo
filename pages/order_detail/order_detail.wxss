  font-size: 26rpx;
  padding: 20rpx 0 0;
}
.order-li {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.order-text {
  width: 150rpx;
  padding-right:10rpx;
  text-align: right;
}

