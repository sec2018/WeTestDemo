  line-height: 60rpx;
  width:690rpx;
  text-align: center;
  color:#fff;
  background: #c1975b;
  border-radius: 4rpx;
  margin:20rpx auto;
  font-size: 30rpx;
}
.list-ul{
  padding:30rpx 30rpx 0;
}
.list-li{
