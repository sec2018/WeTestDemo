/**index.wxss**/
.con-header{
  width:750rpx;
  height:300rpx;
  background: #ccc;
}
.con-btn{
  display: flex;
  font-size: 28rpx;
  color:#000;
  padding:30rpx 30rpx 0;
  justify-content: space-around;
}
.con-btncon{
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
  width:300rpx;
  background: #f8f8f8;
}
.con-tabs{
  position: fixed;
  bottom:0;
  left:0;
  width:750rpx;
  height:100rpx;
  border-top:1rpx solid #ccc;
}
.con-tabs-con{
  display: flex;
  height:80rpx;
  line-height: 80rpx;
  align-items: center;
  justify-content: space-around;
}
.con-tabs-item{
  font-size: 32rpx;
  width:220rpx;
  text-align: center;
}
.con-tabs-item-active{
  color:#c1975b;
}
