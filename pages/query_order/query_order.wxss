/* pages/query_order/query_order.wxss */
page {
    background-color: #f9f9f9;
}
.header,.query-btn{
  display: flex;
  padding:20rpx 30rpx;
  background: #ffffff;
  justify-content: space-between;
}
.header-inp{
  width:500rpx;
  height:50rpx;
  line-height: 50rpx;
  padding:0 30rpx;
  outline: none;
  font-size: 24rpx;
  border:1rpx solid #f1f1f1;
  border-radius: 4rpx;
}
.header-btn{
  width:100rpx;
  height:50rpx;
  line-height:50rpx;
  font-size: 26rpx;
  background: #c1975b;
  border:1rpx solid #c1975b;
  color:#fff;
  text-align: center;
  border-radius: 4rpx;
}
.query-btn-item{
  height:60rpx;
  line-height: 60rpx;
  width:340rpx;
  text-align: center;
  font-size: 30rpx;
}
.btn-item-active{
  color:#c1975b;
}
.border-right{
  border-right: 1rpx solid #f1f1f1;
}
.border-bottom{
  border-bottom: 1rpx solid #f1f1f1;
}
.query-con{
  padding:20rpx 30rpx;
}
.list-ul{
  height: 100%;
}
.list-li{
  background: #ffffff;
  border-radius: 8rpx;
  font-size:26rpx;
  padding:20rpx 30rpx;
  margin-bottom:18rpx;
}
.list-li-tit, .list-li-goods{
  display: flex;
  justify-content: space-between;
  padding-bottom:10rpx;
}

.no-data{
  font-size: 0;
  margin-top:20rpx;
  text-align: center;
}
.no-data-img{
  width:316rpx;
  height:200rpx;
  
}
.no-data-text{
  margin-top:20rpx;
  font-size: 28rpx;
  line-height: 50rpx;
  text-align: center;
  color:#8a8a8a;
  font-weight: blod;
}