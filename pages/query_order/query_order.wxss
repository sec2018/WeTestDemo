/* pages/query_order/query_order.wxss */
.header,.query-btn{
  display: flex;
  padding:20rpx 30rpx;
  justify-content: space-between;
}
.header-inp{
  width:500rpx;
  height:50rpx;
  line-height: 50rpx;
  padding:0 30rpx;
  outline: none;
  font-size: 24rpx;
  border:1rpx solid #f1f1f1;
  border-radius: 4rpx;
}
.header-btn{
  width:100rpx;
  height:50rpx;
  line-height:50rpx;
  font-size: 26rpx;
  background: #c1975b;
  border:1rpx solid #c1975b;
  color:#fff;
  text-align: center;
  border-radius: 4rpx;
}
.query-btn-item{
  height:60rpx;
  line-height: 60rpx;
  width:340rpx;
  text-align: center;
  font-size: 30rpx;
}
.btn-item-active{
  color:#c1975b;
}
.border-right{
  border-right: 1rpx solid #f1f1f1;
}
.border-bottom{
  border-bottom: 1rpx solid #f1f1f1;
}

.list-ul{
  height: 100%;
  border-top:1px solid #f7f7f7;
}
.list-li{
  font-size:26rpx;
  padding:20rpx 30rpx;
  border-bottom:6rpx solid #f5f5f5;
}
.list-btn{
  margin-top:20rpx;
  padding-top:20rpx;
  border-top:1px solid #f7f7f7;
}

.list-btn-right{
  width:200rpx;
  float: right;
}

.list-info{
  font-size: 28rpx;
  display: flex;
  /* justify-content: space-between; */
}
.list-info-text{
  margin-right:20rpx;
}
.list-btn-sty{
  font-size: 0;
  height:40rpx;
  line-height: 40rpx;
  margin-right:10rpx;
  display: inline-flex;
  align-items: center;
}
.list-btn-sty text{
  display: inline-block;
  font-size: 24rpx;
  vertical-align: middle;
}
.list-btn-sty image{
  width:35rpx;
  height:35rpx;
}
.list-btn-edit{
  line-height: 50rpx;
}
.btn{
  position: fixed;
  bottom: 10rpx;
  left: 50rpx;
  width:650rpx;
  background: #c1975b;
  color:#fff;
  height:70rpx;
  line-height: 70rpx;
  box-sizing: border-box;
  text-align: center;
  font-size: 30rpx;
  border-radius: 2rpx;
}
.no-data{
  font-size: 0;
  margin-top:20rpx;
  text-align: center;
}
.no-data-img{
  width:316rpx;
  height:200rpx;
  
}
.no-data-text{
  margin-top:20rpx;
  font-size: 28rpx;
  line-height: 50rpx;
  text-align: center;
  color:#8a8a8a;
  font-weight: blod;
}