/* pages/add_address/add_address.wxss */
.header{
  width:680rpx;
  margin:30rpx auto;
  height:58rpx;
  line-height: 58rpx;
  border:1rpx solid #ccc;
  border-radius: 4rpx;
  position: relative;
}
.inpt{
  width: 580rpx;
  height:58rpx;
  padding-left:30rpx;
  background: transparent;
  border:none;
  outline: none;
  font-size: 28rpx;
}
.search{
  position: absolute;
  top:6rpx;
  right:10rpx;
  height:46rpx;
}
.list-ul{
  height: 100%;
  border-top:1px solid #f7f7f7;
}
.list-li{
  font-size:26rpx;
  padding:20rpx 30rpx;
  border-bottom:6rpx solid #f5f5f5;
}
.list-btn{
  margin-top:20rpx;
  padding-top:20rpx;
  border-top:1px solid #f7f7f7;
}
.list-btn-left{
  width:400rpx;
  display: inline-block;
}
.list-btn-right{
  width:200rpx;
  float: right;
}

.list-info{
  font-size: 28rpx;
  display: flex;
  /* justify-content: space-between; */
}
.list-btn-sty{
  font-size: 0;
  height:40rpx;
  line-height: 40rpx;
  margin-right:10rpx;
  display: inline-flex;
  align-items: center;
}
.list-btn-sty text{
  display: inline-block;
  font-size: 24rpx;
  vertical-align: middle;
}
.list-btn-sty image{
  width:35rpx;
  height:35rpx;
}
.list-btn-edit{
  line-height: 50rpx;
}
.btn{
  position: fixed;
  bottom: 10rpx;
  left: 50rpx;
  width:650rpx;
  background: #c1975b;
  color:#fff;
  height:70rpx;
  line-height: 70rpx;
  box-sizing: border-box;
  text-align: center;
  font-size: 30rpx;
  border-radius: 2rpx;
}
.no-data{
  margin-top:200rpx;
  font-size: 0;
}
.no-data-img{
  width:200rpx;
  height:200rpx;
  margin:0 auto;
}
.no-data-img image{
  width:200rpx;
  height:200rpx;
}
.no-data-text{
  margin-top:20rpx;
  font-size: 28rpx;
  line-height: 50rpx;
  text-align: center;
  color:#8a8a8a;
  font-weight: blod;
}