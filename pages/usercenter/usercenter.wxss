/* pages/usercenter/usercenter.wxss */
.userwrapper{
  width:100%;
  height:100vh;
  background: #f5f5f5;
}
.user-info{
  padding:100rpx 100rpx 80rpx;
  text-align: center;
  line-height: 30rpx;
  font-size: 20rpx;
  color:#666;
}
.login-btn{
  width:80%;
  height:100rpx;
  margin:0 auto;
  background: #c1975b;
  color:#fff;
  text-align: center;
  border-radius: 4px;
  line-height: 100rpx;
}
/* 占位符 */
.place-holder{
  width:100%;
  height:400rpx;
  background:#000;
  color:#fff;
  line-height: 400rpx;
  text-align: center;
}
/* 登录后显示 */
.user-header{
  display:flex;
  align-items: center;
  padding:40rpx 30rpx;
  color:#000;
  font-size: 30rpx;
  background: #fff;
  border-bottom:1px solid #000;
}
.user-photo{
  width:100rpx;
  height:100rpx;
  margin-right:20rpx;
  background: #0000ff;
  border-radius: 100%;
}
.user-ul{
  padding:0 20rpx;
  background: #fff;
}
.user-li{
  display: flex;
  justify-content: space-between;
  height:80rpx;
  padding:0 10rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #ccc;
}