<!--pages/usercenter/usercenter.wxml-->
<view class="userwrapper">
  <block wx:if="{{!isLogin}}">
    <view class="place-holder">我是占位符</view>
    <view class="user-info">登录后，你的个人主页等资料会显示在这里,显示在这里,显示在这里          </view>
    <view class="login-btn">登录</view>
  </block>
  <block wx:else>
    <view class="user-header">
      <view class="user-photo"><image class="user-photo-img" src="{{userInfo.avatarUrl}}"></image></view>
      <view class="user-name">{{userInfo.nickName}}</view>
    </view>
    <view class="user-ul">
      <view class="user-li">
        <view>更换角色</view>
        <view>></view>
      </view>
      <navigator url="../add_address/add_address" class="user-li"><view>地址薄</view><view>></view></navigator>
      <view class="user-li">客服电话： 62678989</view>
      <view class="user-li">关于货运小程序</view>
    </view>
  </block>
</view>
