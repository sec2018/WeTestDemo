/* pages/address/address.wxss */
.add-wrapper{
  padding:30rpx 30rpx 0;
}
.wrapper{
  display: flex;
  align-content: space-around;
  justify-items: center;
  margin-bottom: 30rpx;
}
.border-bottom{
  border-bottom: 1rpx solid #ddd;
  padding-bottom:30rpx;
}
.add-label{
  width:150rpx;
  height:60rpx;
  margin-right:20rpx;
  line-height: 60rpx;
  font-size: 28rpx;
}
.add-input{
  width: 360rpx;
  height:58rpx;
  line-height: 58rpx;
  font-size: 28rpx;
  padding:0 30rpx;
  border: 1rpx solid #ccc;
  border-radius: 2px;

}
.add-textarea{
  height:116rpx;
}
.add-location{
  width:70rpx;
  height:116rpx;
  padding-top:30rpx;
  margin-left:20rpx;
}
.add-location-img{
  width:50rpx;
  height:50rpx;
}
.add-btn{
  width:550rpx;
  margin:100rpx auto 0;
  background: #c1975b;
  color:#fff;
  line-height: 70rpx;
  box-sizing: border-box;
  text-align: center;
  font-size: 30rpx;
  border-radius: 2rpx;
}